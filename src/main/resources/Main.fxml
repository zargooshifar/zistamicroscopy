<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: null;"
      fx:controller="main.Controllers.MainController">
    <children>
        <TabPane maxHeight="130.0" minHeight="130.0" prefHeight="130.0" stylesheets="@assests/css/styles.css"
                 tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Home">
                    <content>
                        <HBox alignment="CENTER_LEFT" maxHeight="100.0" minHeight="100.0" prefHeight="100.0"
                              style="-fx-background-color: null;">
                            <children>
                                <Separator orientation="VERTICAL" prefHeight="200.0"/>
                                <Separator orientation="VERTICAL" prefHeight="200.0"/>
                                <Separator orientation="VERTICAL" prefHeight="200.0"/>
                                <VBox alignment="CENTER" spacing="4.0">
                                    <HBox.margin>
                                        <Insets left="8.0" right="8.0"/>
                                    </HBox.margin>
                                </VBox>
                                <Separator orientation="VERTICAL" prefHeight="200.0"/>
                            </children>
                            <padding>
                                <Insets bottom="4.0" top="4.0"/>
                            </padding>
                        </HBox>
                    </content>
                </Tab>
                <Tab text="Camera">
                    <content>
                        <AnchorPane fx:id="cameraControllerContainer" minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                                    prefWidth="200.0" style="-fx-background-color: #fff;"/>
                    </content>
                </Tab>
                <Tab text="View">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                                    style="-fx-background-color: #fff;">
                            <children>
                                <HBox alignment="CENTER_LEFT" prefHeight="103.0" prefWidth="900.0"
                                      style="-fx-background-color: #fff;">
                                    <children>
                                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                            <children>
                                                <JFXButton fx:id="viewScale" onAction="#changeViewScale"
                                                           prefWidth="100.0" text="Change View Scale">
                                                    <VBox.margin>
                                                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                                                    </VBox.margin>
                                                </JFXButton>
                                            </children>
                                            <HBox.margin>
                                                <Insets left="8.0" right="8.0"/>
                                            </HBox.margin>
                                        </VBox>
                                        <Separator orientation="VERTICAL" prefHeight="200.0"/>
                                        <Separator orientation="VERTICAL" prefHeight="200.0"/>
                                        <Separator orientation="VERTICAL" prefHeight="200.0"/>
                                        <Separator orientation="VERTICAL" prefHeight="200.0"/>
                                        <JFXToggleButton fx:id="autoContrastToggle" contentDisplay="RIGHT"
                                                         text="Auto Contrast and Brightness" wrapText="true"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="4.0" top="4.0"/>
                                    </padding>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Acquisition">
                    <content>
                        <AnchorPane fx:id="acquisitionControllerContainer" minHeight="0.0" minWidth="0.0"
                                    prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: #fff;"/>
                    </content>
                </Tab>
                <Tab text="Statistics">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                                    style="-fx-background-color: #fff;"/>
                    </content>
                </Tab>
                <Tab text="Configuration">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                                    style="-fx-background-color: #fff;"/>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
        <SplitPane dividerPositions="0.7182628062360802, 0.5" VBox.vgrow="ALWAYS">
            <items>
                <VBox alignment="TOP_CENTER" maxWidth="36.0" minWidth="36.0" prefWidth="36.0" spacing="1.0">
                    <children>
                        <Button ellipsisString="" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0"
                                mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@assests/icons/cursor_arrow.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button ellipsisString="" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0"
                                mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@assests/icons/cursor_hand.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button ellipsisString="" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0"
                                mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@assests/icons/zoomin.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button ellipsisString="" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0"
                                mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@assests/icons/zoomout.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button ellipsisString="" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0"
                                mnemonicParsing="false" onAction="#rotateLeft" prefHeight="32.0" prefWidth="32.0">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@assests/icons/rotate_left.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button ellipsisString="" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0"
                                mnemonicParsing="false" onAction="#rotateRight" prefHeight="32.0" prefWidth="32.0">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@assests/icons/rotate_right.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button ellipsisString="" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0"
                                mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@assests/icons/flip_vertical.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button ellipsisString="" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0"
                                mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@assests/icons/flip_horizental.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                    <padding>
                        <Insets top="2.0"/>
                    </padding>
                </VBox>
                <StackPane alignment="BOTTOM_CENTER" prefHeight="150.0" prefWidth="200.0">
                    <children>
                        <Pane fx:id="viewPane"/>
                    </children>
                </StackPane>
                <VBox maxWidth="300.0" minWidth="250.0" prefWidth="250.0">
                    <children>
                        <TitledPane minWidth="250.0" text="Stage State" VBox.vgrow="ALWAYS">
                            <content>
                                <AnchorPane fx:id="stageStateContainer"/>
                            </content>
                        </TitledPane>
                        <TitledPane text="Histogram">
                            <content>
                                <AnchorPane fx:id="histogramPanel" minHeight="0.0" minWidth="0.0" prefHeight="370.0"
                                            prefWidth="321.0"/>
                            </content>
                        </TitledPane>
                        <TitledPane animated="false">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                            </content>
                        </TitledPane>
                    </children>
                </VBox>
            </items>
        </SplitPane>
        <HBox id="HBox" fx:id="statusbarContainer" alignment="CENTER" spacing="5.0" VBox.vgrow="NEVER">
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
